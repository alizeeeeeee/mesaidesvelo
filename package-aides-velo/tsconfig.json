{
	"compilerOptions": {
		"target": "es6",
		"moduleResolution": "node",
		"declaration": true,
		"esModuleInterop": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"outDir": "./build",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"rootDir": "../",
		"paths": {
			"$lib/*": ["../src/lib/*"]
		}
	},
	"include": ["global.d.ts", "index.ts"]
}
